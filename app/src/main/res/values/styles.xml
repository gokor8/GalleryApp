<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButtonStyle">
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Theme.GalleryApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_text_view</item>
        <item name="android:layout_marginEnd">@dimen/margin_match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_match_parent</item>
        <item name="endIconMode">custom</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>

</resources>
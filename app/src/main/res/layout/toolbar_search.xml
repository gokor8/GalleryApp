<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    app:title=""
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_start_end_search"
        android:layout_marginTop="@dimen/margin_top_bottom_search"
        android:layout_marginEnd="@dimen/margin_start_end_search"
        android:layout_marginBottom="@dimen/margin_top_bottom_search"
        android:backgroundTint="@color/main_gray"
        app:boxBackgroundColor="@color/main_gray"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/main_gray"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconDrawable="@drawable/ic_microphone"
        app:endIconMode="custom"
        android:hint=""
        app:startIconDrawable="@drawable/ic_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_search"
            style="@style/EditTextStyle"
            android:hint="@string/search"
            android:textSize="17sp"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>
</androidx.appcompat.widget.Toolbar>